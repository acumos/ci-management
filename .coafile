[all]
ignore = .**

[all.GitCommit]
bears = GitCommitBear
ignore_length_regex = Signed-off-by,
    Also-by,
    Co-authored-by,
    http://,
    https://

[all.JSON]
bears = JSONFormatBear
files = packer/**.json
ignore = packer/common-packer/**
indent_size = 2

[all.ShellCheck]
bears = ShellCheckBear,
    SpaceConsistencyBear
files = jjb/**.sh
ignore = jjb/global-jjb/**
shell = bash
indent_size = 4
use_spaces = yeah

[all.YAML]
bears = YAMLLintBear
files = jjb/**.yaml
ignore = jjb/global-jjb/**
document_start = True
yamllint_config = yamllint.conf
